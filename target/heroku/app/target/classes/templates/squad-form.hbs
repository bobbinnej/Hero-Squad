{{#partial "content"}}
    <div class="hero-form">
        <h1 class="heroform-title">Create your Squad</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col">
                <div class="hero-form">
                    <form action="/new/squad" method="post">
                        <div class="mb-3">

                            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Input Squad Name" name="squadName"><br>
                            <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="Input Maximum Size" name="size"><br>
                            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Input Squad Mission" name="squadPurpose"><br>

                        </div>

                        <div class="submit-btn">
                            <button type="submit" class="herosubmit-btn">Submit</button>
                        </div>

                    </form>

                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>




{{/partial}}
{{>layout.hbs}}